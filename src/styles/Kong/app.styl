@import '~normalize.css';

html, body
    width 100%
    height 100%
    h3
        padding: 0
        margin: 0
    #app
        width 100%
        height 100%
        //font-family: "Avenir", Helvetica, Arial, sans-serif;

        font-family: "Microsoft YaHei";
        color:#22334a;

        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        // background: #f8f8f8
        min-width 1430px
        overflow-y: hidden;
        .container
            width 100%
            height 100%
            overflow hidden
            .pagination--container
                margin-top 20px

            .el-card
                height 100%
                display: flex
                flex-direction: column
                .el-card__body
                    flex: 1
                    overflow: auto
